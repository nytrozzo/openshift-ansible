---
vm_prefix: "ci_test"

type: aws
operating_system: "rhel"
aws_user: "ec2-user"
python: "/usr/bin/python"
aws_key: "libra"
aws_region: "us-east-1"
aws_cluster_id: "ci"
# us-east-1d
aws_subnet: "subnet-cf57c596"

# This flag is required for launch.yml so that additional volume for docker would be provisioned
is_atomic: false

vms:
- name_template: "{{ vm_prefix }}-master"
  groups:
    - masters
    - etcd
    - nodes
  aws_flavor: t2.large
  aws_security_group: public
  node_group: "node-config-all-in-one"
  amount: 1
  # Use custom AMI
  #aws_image: "ami-70e8fd66"
  #is_atomic: false
